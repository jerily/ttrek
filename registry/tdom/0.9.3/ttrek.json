{
	"name":	"tdom",
	"version":	"0.9.3",
	"scripts":	{
	},
	"dependencies":	{
		"tcl": "9.0b1"
	},
	"devDependencies":	{
	},
	"lifecycle": {
		"install": [
			{ "cmd": "curl", "url": "http://tdom.org/downloads/tdom-0.9.3-src.tar.gz" },
			{ "cmd": "unpack" },
			{ "cmd": "cd", "dir": "$PACKAGE_NAME/unix" },
			{
				"cmd": "configure",
				"path": "../configure",
				"options": [{"name": "with-tcl", "value": "$INSTALL_DIR/lib"}]
			},
			{ "cmd": "make" },
			{ "cmd": "make_install" }
		]
	}
}